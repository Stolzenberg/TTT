@using System
@inherits PanelComponent
@namespace Mountain

<root>
    @if (IsProxy || Testing)
    {
        <div class="card">
            <div class="name">@Name</div>
        </div>
    }
</root>

@code{

    [Property]
    public bool Testing { get; set; } = false;
    [Property]
    public string Name { get; set; } = string.Empty;

    protected override int BuildHash()
    {
        return HashCode.Combine(Name);
    }

}